page {
  background: #f6f6f6;
  display: flex;
  flex-direction: row;

}

.list{
  background: #a83a3a;
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

.album{
  margin: 20rpx;
  height: 250rpx;
  width: 300rpx;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.5);
  border-left: none;
  border-top: none;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  transition: all 300ms ease;
}
.tabss{
  padding: 100rpx, 100rpx;
  width: 750rpx;
}
