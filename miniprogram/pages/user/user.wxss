/* pages/user/user.wxss */

.avatarBox {
  padding: 50rpx 0rpx;
  text-align: center;
  width: 100%;
  position: relative;
  background-color: rgb(250, 250, 250);
  height: 260rpx;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  position: absolute;
  left: 275rpx;
  top: 50rpx;
}

.avatarNickname {
  width: 400rpx;
  position: absolute;
  top: 270rpx;
  left: 175rpx;
}

.imageBox {
  text-align: center;
  margin-bottom: 100rpx;
}
.panelClass{
  margin-bottom: 200rpx;
}
.imageView{
  position: relative;
}
.imageClass {
  width: 240rpx;
  height: 240rpx;
  border-radius: 5%;
}
.imageIcon{
  position: absolute;
  top: 5rpx;
  right: 5rpx;
}

.albumImageClass {
  width: 280rpx;
  height: 280rpx;
  border-radius: 10%;
}

.navTop {
  width: 100%;
  height: 80rpx;
  background-color: rgb(250, 250, 250);
  display: flex;
  border-top: 1rpx solid;
  border-bottom: 1rpx solid;
  border-color: rgba(102, 102, 102, 0.425);
}

.photoNav {
  height: 80rpx;
  background-color: rgb(250, 250, 250);
  position: relative;

  border-color: rgba(102, 102, 102, 0.425);
}

.photoNavItem1 {
  position: absolute;
  left: 20rpx;
  margin-top: 10rpx;
}

.photoNavItem2 {
  position: absolute;
  right: 125rpx;
  top: 5rpx;
  height: 70rpx;
  width: 120rpx;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  border-right: solid 1rpx rgba(102, 102, 102, 0.425);
}

.photoNavItem3 {
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  height: 70rpx;
  width: 120rpx;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.navTopItem {
  width: 250rpx;
  height: 80rpx;
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
}
.navimage{
  width: 70rpx;
  height: 70rpx;
}


.photosClass {
  margin-top: 20rpx;
}

.albumNameClass {
  font-size: 30rpx;
}

.albumCountClass {
  margin-bottom: 10rpx;
  font-size: 25rpx;
  color: #96acc0;
}

.storageDetail {
  position: absolute;
  top: 50rpx;
  right: 10rpx;
  color: #8a8a8a;
}

.rightImage{
  width: 35rpx;
  height: 35rpx;
}

.addAlbum {
  height: 80rpx;
  width: 80rpx;
  border-radius: 80rpx;
  position: fixed;
  bottom: 30rpx;
  left: 335rpx;
  background-color: #fff;
}

.addImage {
  height: 80rpx;
  width: 80rpx;
  border-radius: 80rpx;
  box-shadow: 3rpx 3rpx 3rpx 3rpx #666;
}

.addHover{

}
.addAlbumBox {
  width: 250rpx;
  height: 250rpx;
  text-align: center;
}

.managementSpace {
  width: 100%;
  height: 80rpx;
  background-color: #ff830f;
}

.header1 {
  background-color: #f5f5f5;
}

.header2 {
  background-color: #fff;
}

.header {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #d6d6d6;
}

.header .header_con {
  width: 700rpx;
  height: 80rpx;
  margin: 0 auto;
  color: #333;
  font-size: 30rpx;
}

.header .header_con image {
  width: 44rpx;
  height: 44rpx;
}

.header .header_con .right {
  color: #ff4965;
}

.bottom {
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}

.bottom .left {
  margin-left: 25rpx;
}

.bottom .left .select_none {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}

.bottom .right .all {
  color: #ff830f;
  font-size: 26rpx;
}

.bottom .right .gray {
  color: #666;
  font-size: 22rpx;
}

.bottom .right .sure {
  margin-left: 22rpx;
  width: 220rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #ff4965;
  color: #fff;
}

/*列表*/

.onlinechoose {
  width: 750rpx;
  margin-top: 15rpx;
  background-color: #fff;
  font-size: 32rpx;
}

.onlinechoose .hotel_list {
  width: 750rpx;
  height: 260rpx;
  border-bottom: 1rpx solid #d6d6d6;
  background-color: #fff;
}

.onlinechoose .hotel_list .icon_none {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}

.onlinechoose .hotel_list .list_cons {
  width: 700rpx;
  height: 200rpx;
}

.onlinechoose .list_cons .lefts {
  width: 80rpx;
}

.onlinechoose .list_cons image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 25rpx;
}

.list_cons .right {
  width: 395rpx;
  height: 200rpx;
}

.list_cons .right .name {
  font-size: 32rpx;
  color: #333;
  font-weight: 700;
  letter-spacing: 3rpx;
  margin-bottom: 20rpx;
}

.list_cons .right .list1 {
  margin-bottom: 17rpx;
}

.list_cons .right .list1 .condition1 {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.list_cons .right .list1 .condition2 {
  font-size: 24rpx;
  color: #999;
}

.list_cons .right .list1 .act {
  color: #2d8622;
}

.list_cons .right .list1 .r {
  font-size: 24rpx;
  color: #ff4965;
}

.list_cons .right .list1 .big {
  font-size: 32rpx;
}

.list_cons .right .lists2 {
  height: 36rpx;
  line-height: 36rpx;
  font-size: 22rpx;
}

.list_cons .right .lists2 .left {
  width: 162rpx;
  text-align: center;
  color: #ff4965;
  border: 1rpx solid #ff4965;
  box-sizing: border-box;
  border-radius: 5rpx;
}

.list_cons .right .lists2 .right2 {
  color: #999;
}

.flex_center {
  margin-left: 20rpx;
  margin-right: 5rpx;
  margin-top: 10rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}

.flex_between {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}

.flex_start {
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  align-items: center;
}

.flex_end {
  display: flex;
  display: -webkit-flex;
  justify-content: flex-end;
  align-items: center;
}
